<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="20dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:paddingTop="10dip"
        android:paddingBottom="10dip">

        <ImageButton
            android:id="@+id/newYieldFormCloseBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dip"
            android:background="@drawable/ic_close_black_24dp"
            app:srcCompat="@drawable/ic_close_black_24dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/newYieldFromLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dip"
        android:layout_marginTop="10dip"
        android:layout_marginEnd="10dip"
        android:layout_marginBottom="10dip"
        android:text="@string/amount_of_milk_litres"
        android:textColor="@color/colorLabelDark"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/new_yield_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:layout_marginBottom="10dip"
        android:background="@android:drawable/edit_text"
        android:ems="10"
        android:inputType="number|numberDecimal" />

    <Button
        android:id="@+id/newYieldSaveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:background="@color/colorPrimary"
        android:backgroundTint="@color/colorPrimary"
        android:paddingStart="32dip"
        android:paddingEnd="32dip"
        android:text="@string/save"
        android:textColor="@android:color/white"
        android:textSize="18sp" />
</LinearLayout>