<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.LoginActivity">

    <LinearLayout
        android:id="@+id/loginDescrText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/loginDescr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dip"
            android:layout_marginEnd="20dip"
            android:layout_marginBottom="40dip"
            android:text="@string/login_describe_text"
            android:textColor="@color/colorLabelDark"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/loginPhoneLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dip"
            android:layout_marginEnd="20dip"
            android:layout_marginBottom="5dip"
            android:text="@string/login_phone_label"
            android:textColor="@color/colorLabelDark"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/loginPhone"
            android:layout_width="match_parent"
            android:layout_height="64dip"
            android:layout_marginStart="20dip"
            android:layout_marginTop="5dip"
            android:layout_marginEnd="20dip"
            android:background="@android:drawable/edit_text"
            android:ems="10"
            android:hint="+996 551 52 53 54"
            android:inputType="number|phone" />

        <Button
            android:id="@+id/permissionREquestBtn"
            android:layout_width="match_parent"
            android:layout_height="64dip"
            android:layout_marginStart="20dip"
            android:layout_marginTop="40dip"
            android:layout_marginEnd="20dip"
            android:background="@color/colorPrimary"
            android:text="@string/send_code"
            android:textColor="@color/ic_launcher_background"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/loginProgress"
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:indeterminateTint="@color/colorPrimary"
            android:visibility="gone"/>

        <ProgressBar
            android:id="@+id/loginProgressBar"
            style="@style/AppTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:indeterminateTint="@color/colorPrimary"
            android:visibility="gone"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>