<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/livestockListViewItemCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="32dip"
        android:layout_marginStart="10dip">

        <ImageView
            android:id="@+id/livestockItemImage"
            android:layout_width="64dip"
            android:layout_height="64dip"
            app:srcCompat="@mipmap/ic_livestock_icon_foreground" />
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginStart="5dip"
        android:layout_marginEnd="5dip">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/livestockUid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />
            <TextView
                android:id="@+id/livestockSerial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="5dip"
                android:layout_weight="1"
                android:text="0000001"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/livestockSpicies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dip"
                android:layout_marginBottom="5dip"
                android:layout_weight="1"
                android:text="@string/mrs_spices_label"
                android:textColor="@color/colorLabelDark"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:id="@+id/livestockSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:text="Жен."
            android:textColor="@color/colorLabelDark"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/livestockAdded"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:layout_weight="1"
                android:text="@string/date_examle"
                android:textColor="@color/colorLabelDark"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/livestockSpiciesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:layout_marginEnd="10dip"
            android:layout_marginStart="5dip"
            android:layout_weight="1"
            android:text="@string/sum"
            android:textColor="@color/colorLabelDark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/livestockEditButton"
            android:layout_width="32dip"
            android:layout_height="32dip"
            android:layout_marginEnd="5dip"
            android:background="@drawable/ic_edit_black_24dp"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>